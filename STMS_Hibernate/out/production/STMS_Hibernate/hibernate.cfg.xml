<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/stms_db</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.username">root</property>
        <property name="connection.password">@1Number</property>
        <mapping class="entity.Autofills"/>
        <mapping class="entity.Comments"/>
        <mapping class="entity.Events"/>
        <mapping class="entity.Mentors"/>
        <mapping class="entity.Notifications"/>
        <mapping class="entity.Patterns"/>
        <mapping class="entity.Subjects"/>
        <mapping class="entity.Tasks"/>
        <mapping class="entity.Types"/>
        <mapping class="entity.Users"/>


        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>